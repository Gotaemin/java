package service;

import java.sql.Connection;
import java.util.ArrayList;

import dao.MovieDAO;

import static db.JdbcUtil.*;
import vo.Movie;
import vo.Theater;

public class MovieReserveService {
	Connection conn = null;
	MovieDAO movieDAO = null;
	
	public MovieReserveService() {
		conn = getConnection();
		movieDAO = new MovieDAO();
	}

	
	
	public ArrayList<Movie> getTitle() {
		movieDAO.setConnection(conn);
		
		ArrayList<Movie> getTitle = movieDAO.getTitle();  
		
		close(conn);
		
		return getTitle;
	}

	public ArrayList<Theater> getLocal() {
		movieDAO.setConnection(conn);
		ArrayList<Theater> getLocal = movieDAO.getTheater(city);
		
		return null;
	}

}
